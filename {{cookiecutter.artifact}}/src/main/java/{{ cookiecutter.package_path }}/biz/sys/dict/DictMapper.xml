<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{ cookiecutter.basePackage }}.biz.sys.dict.DictMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="{{ cookiecutter.basePackage }}.biz.sys.dict.Dict">
        <result column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="name" property="name" />
        <result column="dict_sort" property="dictSort" />
        <result column="label" property="label" />
        <result column="value" property="value" />
        <result column="dict_type" property="dictType" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_time,
        update_time,
        name, dict_sort, label, value, dict_type
    </sql>

    <select id="selectMaxSort" resultType="java.lang.Integer">
        SELECT
            IFNULL( MAX( `dict_sort` ), 0 ) AS sort
        FROM
            `sys_dict`
        WHERE
            `dict_type` = #{dictType}
    </select>

</mapper>
