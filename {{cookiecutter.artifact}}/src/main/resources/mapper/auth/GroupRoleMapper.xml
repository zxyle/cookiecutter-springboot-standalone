<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{ cookiecutter.basePackage }}.biz.auth.mapper.GroupRoleMapper">

    <select id="getRolesByGroupId" resultType="{{ cookiecutter.basePackage }}.biz.auth.entity.Role">
        SELECT
            b.*
        FROM `auth_group_role` a
        LEFT JOIN `auth_role` b ON a.role_id = b.id
        WHERE a.group_id = #{groupId}
    </select>

</mapper>
