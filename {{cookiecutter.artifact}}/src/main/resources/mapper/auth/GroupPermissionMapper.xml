<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{ cookiecutter.basePackage }}.biz.auth.mapper.GroupPermissionMapper">

    <select id="getPermissionByGroupId" resultType="{{ cookiecutter.basePackage }}.biz.auth.entity.Permission">
        SELECT
            b.*
        FROM `auth_group_permission` a
        LEFT JOIN `auth_permission` b
        ON a.permission_id = b.id
        WHERE a.group_id = #{groupId};
    </select>

</mapper>
