<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{ cookiecutter.basePackage }}.biz.sys.mapper.SqlMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="{{ cookiecutter.basePackage }}.biz.sys.entity.Sql">
        <result column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="sql" property="sql"/>
        <result column="success" property="success"/>
        <result column="author" property="author"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_time,
        update_time,
        sql, success, author
    </sql>


    <select id="selectAll" resultType="{{ cookiecutter.basePackage }}.biz.sys.entity.Sql">
        SELECT *
        FROM sys_sql
    </select>

    <select id="execute" resultType="java.util.Map">
        SELECT *
        FROM ${sql}
    </select>

    <update id="truncate">
        TRUNCATE TABLE sys_sql
    </update>

</mapper>
